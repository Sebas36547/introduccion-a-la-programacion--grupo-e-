float $$$$$$$$ (float hora, float costo);

void main()
{
	int i,n;
    float hora,costo,ganado,t;
	t=0;
	do{
	cout<<"Ingrese el numero de empleados: ";
	cin>>n;
	}while(n<0);
	for(i=1;i<=n;i++)
	{
    cout<<"Trabajador "<<i<<endl;
	do{
	cout <<"Ingrese el numero de horas:" ;
	cin >>hora;	
	}while((hora<=0)||(hora>=200));
	do{
    cout <<"Ingrese el costo por horas:"; 
	cin >> costo;	
	}while(costo<0);
    ganado= $$$$$$$$ (hora,costo);
	t=t+ganado;
    cout<<"La ganancia es:" <<ganado<<"$"<<endl;  
	getch();  
	}

    	cout<<"La ganancia total de "<<n<<" empleados es: "<<t<<"$"<<endl;
		getch();
 }

float $$$$$$$$ (float hora, float costo)
 { float ganancia;
		ganancia= costo*hora ;
		
    return ganancia;  
	
}
