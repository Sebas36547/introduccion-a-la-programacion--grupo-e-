	cout<<"2.opcion:"<<endl;
	cout<<"3.opcion:"<<endl;
	cout<<"4.opcion:"<<endl;
	cout<<"0.salir:"<<endl;
	cin>>op;


     switch (op)
	{
	 case 1:
		 {
			cout<<"1.problemas con la cancha:"<<endl;
	        cout<<"2.basura por recojer:"<<endl;
	        cout<<"3.:"<<endl;
	        cout<<"4.opcion:"<<endl;
